*Joining the drivers to their respective crew chiefs*
SELECT drivers.first_name, drivers.last_name, crew_chiefs.first_name, crew_chiefs.last_name
FROM drivers
JOIN crew_chiefs
ON drivers.id = crew_chiefs.id;

"Joining the drivers and teams table values, then listing a team's drivers by the driver name*
SELECT drivers.first_name, drivers.last_name, teams.name, teams.manufacturer
FROM drivers
JOIN teams
ON drivers.team_id = teams.id
WHERE teams.name = "Hendrick Motorsports"
ORDER BY drivers.first_name;

*Joining all values from all three tables*
SELECT *
FROM drivers
JOIN teams
ON drivers.team_id = teams.id
JOIN crew_chiefs
ON drivers.id = crew_chiefs.id;

"Cleaned up version of data from all 3 tables, sorted by manufacturer and team name*
SELECT drivers.first_name, drivers.last_name, teams.name AS team, teams.manufacturer, crew_chiefs.first_name, crew_chiefs.last_name
FROM drivers
JOIN teams
ON drivers.team_id = teams.id
JOIN crew_chiefs
ON drivers.id = crew_chiefs.id
ORDER BY manufacturer, teams.name
